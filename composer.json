{
    "name": "triga/triga",
    "license": "MIT",
    "type": "project",
    "require": {
        "laravel/framework": "5.0.*",
        "rcrowe/twigbridge": "0.7.*@dev",
        "filp/whoops": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "Triga\\": "app/",
            "Source\\": "src/",
            "Domain\\": "domain/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
