<table class="table table-striped table-hover table-condensed">
    <thead>
        <tr>

            {% for column in columns %}
                {% include 'data_grid.grid.column' with {'column': column, 'order': order} %}
            {% endfor %}

        </tr>
    </thead>
    <tbody>

        {% for entry in data %}

            <tr>

                {% for column in columns %}
                    {% include 'data_grid.grid.cell' with {'value': attribute(entry, column)} %}
                {% endfor %}

            </tr>

        {% endfor %}

    </tbody>
</table>
